b-border-1px($color)
    position: relative
    &:after 
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content: ' '
        
t-border-1px($color)
    position: relative
    &:before
        display: block
        position: absolute
        left: 0
        top: 0
        width: 100%
        border-top: 1px solid $color
        content: ' '     

border-none()
    &:before
        display: none
    &:after
        display: none
t-border-none()
    &:before
        display: none
b-border-none()
    &:after
        display: none

bg-image($url)
    background-image: url($url + "@2x.png")
    @media (-webkit-min-device-pixel-radio),(min-device-pixel-radio)
        background-image: url($url + "@3x.png")
      
        